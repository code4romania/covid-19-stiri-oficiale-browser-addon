{
    "manifest_version": 2,
    "name": "COVID-19 ȘTIRI OFICIALE",
    "description": "Extensia ajută la identificarea expresiilor legate de coronavirus și adaugă peste acestea un infobox cu surse oficiale de informare.",
    "permissions": [
        "<all_urls>",
        "webNavigation",
        "activeTab",
        "storage",
        "contextMenus",
        "tabs"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "web_accessible_resources": [
        "images/logo-code4ro.svg",
        "images/logo-news-full.png",
        "images/logo-gov.png",
        "emergency_news_tooltip.css"
    ],
    "icons": {
        "16": "images/icon-16.png",
        "19": "images/icon-19.png",
        "38": "images/icon-38.png",
        "48": "images/icon-48.png",
        "96": "images/icon-96.png",
        "128": "images/icon-128.png"
    },
    "browser_action": {
        "default_icon": "images/icon-128.png",
        "browser_style": true,
        "default_title": ""
    }
}